{
  "name": "express-zod-swagger",
  "version": "0.0.0",
  "description": "node + ts + express + client input validation(zod) + automated API documentation(swagger)",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "npx nodemon",
    "format": "npx prettier --write ./src",
    "pm2": "pm2 start npm --name express-zod-swagger -- start",
    "start": "NODE_PATH=dist node dist",
    "start:ts": "ts-node src"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^5.3.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "pino-http": "^8.3.3",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/node": "^17.0.34",
    "@types/swagger-ui-express": "^4.1.3",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "authors": "iouiou50"
}
